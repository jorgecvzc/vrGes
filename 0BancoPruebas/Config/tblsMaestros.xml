<xmlConfig>
<!-- Tipos de datos:
t: Texto
z: Número Entero
r: Número Real
b: Lógico
h: Habilitador - Lógico. Activa o desactiva un grupo de campos dentreo del maestro
l: lineas. Campo que contendrá varias líneas de información de un grupo de campos dados
e: externo. Campo que apunta a otro objeto de Maestro. El nombre de dicho objeto se guardará en el campo Almacen.
a: adjunto. Externo especial que apunta a otro objeto que, en caso de existir, tendrá una relación es de 1 a 1 y compatirá el índice 
 -->

<mtCliente>
	<Almacen>Clientes</Almacen>
	<Indice><id1>cliId</id1></Indice>
	<Campos>
		<ref tipo="t">cliRef</ref>
		<nombre tipo="t">cliNombre</nombre>
		<nombreFiscal tipo="t">cliNombreFiscal</nombreFiscal>
		<direccion tipo="t">cliDireccion</direccion>
	</Campos>
</mtCliente>

<mtProveedor>
	<Almacen>Proveedores</Almacen>
	<Indice><id1>proId</id1></Indice>
	<Campos>
		<nombre tipo="t">proNombre</nombre>
		<nombreFiscal tipo="t">proNombreFiscal</nombreFiscal>
		<direccion tipo="t">proDireccion</direccion>
	</Campos>
</mtProveedor>

<cnLArticulos>
	<Alamcen>Articulos</Alamcen>
	<Indice><Id1>artId</Id1></Indice>
	<Campos>
		<ref tipo="br">artRef</ref>
		<nombre tipo="br">artNombre</nombre>
		<descripcion tipo="r">artDescripcion</descripcion>
	</Campos>
</cnLArticulos>

<mtArticulo>
	<Almacen>Articulos</Almacen>
	<Indice><id1>artId</id1></Indice>
	<Campos>
		<ref tipo="t">artRef</ref>
		<ref_asociada tipo="t"></ref_asociada>
		<nombre tipo="t">artNombre</nombre>
		<descripcion tipo="t">artDescripcion</descripcion>
		<proveedor tipo="e">
			<Almacen>Proveedor</Almacen>
			<Indice><id1>artProveedor</id1></Indice>
		</proveedor>
		<precio tipo="r">artPrecio</precio>
		<precioCompra tipo="r">artPrecioCompra</precioCompra>
		<observaciones tipo="t">artObservaciones</observaciones>

		<numVariantes tipo="z">artNumVariantes</numVariantes>
		<variante1 tipo="e">
				<Almacen>VarianteArt</Almacen>
				<ListaCampos>ref,nombre</ListaCampos>
				<Indice><id1>artVariante1</id1></Indice>				
		</variante1>
		<variante2 tipo="e">
				<Almacen>VarianteArt</Almacen>
				<ListaCampos>ref,nombre</ListaCampos>
				<Indice><id1>artVariante2</id1></Indice>				
		</variante2>
		<variante3 tipo="e">
				<Almacen>VarianteArt</Almacen>
				<ListaCampos>ref,nombre</ListaCampos>
				<Indice><id1>artVariante3</id1></Indice>				
		</variante3>
		

		<escandallo tipo="a">
			<Almacen>ArtEscandallo</Almacen>
		</escandallo>
		
		<manufacturado tipo="h">artManufacturado
			<Campos>
					<Campo>escandallo</Campo>
			</Campos>
		</manufacturado>
					
		<control tipo="z">artControl</control>
	</Campos>
</mtArticulo>

<mtVarianteArt>
	<Almacen>VariantesArt</Almacen>
	<Indice><id1>varId</id1></Indice>
	<Campos>
		<ref tipo="t">varRef</ref>
		<nombre tipo="t">varNombre</nombre>
	</Campos>
</mtVarianteArt>

<mtModificadorArt>
	<Almacen>ModificadoresArt</Almacen>
	<Indice><id1>moaId</id1></Indice>
	<Campos>
		<ref tipo="t">moaRef</ref>
		<nombre tipo="t">moaNombre</nombre>
		<variante tipo="e">
			<Almacen>VarianteArt</Almacen>
			<ListaCampos>ref,nombre</ListaCampos>
			<Indice><id1>moaVariante</id1></Indice>
		</variante>
	</Campos>
</mtModificadorArt>


<adArtEscandallo>
	<Almacen>ArtEscandallo</Almacen>
	<Indice><id1>areArticulo</id1></Indice>
	<Campos>
		<despiece tipo="l">
			<Almacen>ArticulosDespieces</Almacen>
			<Indice>
				<id1>artdeArticulo</id1>
				<id2>artdeId</id2>
			</Indice>
			<Orden>artdeOrden</Orden>
			<Campos>
				<pieza tipo="t">artdePieza</pieza>
				<ref tipo="t">artdeRef</ref>
				<descripcion tipo="t">artdeDescripcion</descripcion>
				<material tipo="e">
					<Almacen>Articulo</Almacen>
					<ListaCampos>ref,nombre</ListaCampos>
					<Indice><id1>artdeMaterial</id1></Indice>
				</material>
				<matRef tipo="t" busqueda="material->ref">$[material>ref]</matRef>
				<matNombre tipo="t">$[material>nombre]</matNombre>
				<ancho tipo="r">artdeMedida1</ancho>
				<largo tipo="r">artdeMedida2</largo>
				<area tipo="r">artdeArea</area>
			</Campos>
		</despiece>

		<proceso tipo="e">
			<Almacen>Proceso</Almacen>
			<Indice><id1>areProceso</id1></Indice>
			<ListaCampos>nombre</ListaCampos>
		</proceso>
		<procesoTareas tipo="w">
			<Externo>
				<Indice><id1>proceso</id1></Indice>
				<ListaCampos>*tareas</ListaCampos>
			</Externo>
			<Lineas>
				<Almacen>ArticulosTareas</Almacen>
				<Indice>
					<id1>artpArticulo</id1> 
					<id2>artptId</id2>
				</Indice>
				<Campos>
					<tiempo tipo="r">artptTiempo</tiempo>				
					<coste tipo="r">artptCoste</coste>
				</Campos>
			</Lineas>
		</procesoTareas>		
	</Campos>
</adArtEscandallo>	


<mtColor>
	<Almacen>Colores</Almacen>
	<Indice><id1>colId</id1></Indice>
	<Campos>
		<nombre tipo="t">colNombre</nombre>
	</Campos>		
</mtColor>


<mtTalla>
	<Alamacen>Tallas</Alamacen>
	<Indice><id1>talId</id1></Indice>
	<Campos>
		<nombre tipo="t">talNombre</nombre>
	</Campos>
</mtTalla>


<mtPedido>
	<Almacen>Pedidos</Almacen>
	<Indice>pedId</Indice>
	<Campos>
		<Campo id="cliente" tipo="e" objeto="Cliente">
			<Enlace tipo="n">pedCliente</Enlace>
		</Campo>
		<Campo id="contacto" tipo="t">pedContacto</Campo>
		<Campo id="telefono" tipo="t">pedContTelefono</Campo>
		<Campo id="mail" tipo="t">pedContMail</Campo>
		<Campo id="TEMPO" tipo="t"></Campo>
		<Campo id="lineas" tipo="l">
			<Almacen>PedidosLineas</Almacen>
			<Indice>pedliPedido</Indice>
			<Indice>pedliId</Indice>
			<Orden>pedliOrden</Orden>
			<Campos>
				<Campo id="articulo" tipo="e" objeto="Articulo">
					<Enlace tipo="n">pedliArticulo</Enlace>
				</Campo>
				<Campo id="refArticulo" tipo="t">$[articulo>ref]->pedliArtRef</Campo>
				<Campo id="nombre" tipo="t">$[articulo>nombre]->pedliArtNombre</Campo>						
				<Campo id="cantidad" tipo="z">pedliCantidad</Campo>
			</Campos>
		</Campo>
		<Campo id="totalArticulos" tipo="r">$[lineas:cantidad].sum()</Campo>

	</Campos>
</mtPedido>
			<!-- <Campo id="trabajos" tipo="l">
				<Tabla nombre="PedidosTrabajos">
					<Indice>pedtrPedido</Indice>
					<Indice>pedtrId</Indice>
					<Orden>pedtrOrden</Orden>
					<Campos>
						<Campo id="trabajo" tipo="e" objeto="Trabajo">						
							<Enlace tipo="n">pedtrTrabajo</Enlace>
						</Campo>
						<Campo id="nombre" tipo="t">$[trabajo>nombre]</Campo>						
						<Campo id="observaciones" tipo="t">pedtrObs</Campo>
					</Campos>
				</Tabla>
			</Campo> -->


<mtAlbaran>
	<Almacen>Albaranes</Almacen>
	<Indice>albId</Indice>
	<Campos>
		<Campo id="cliente" tipo="e">albCliente</Campo>
		<Campo id="lineas" tipo="l"> 
			<Almacen>AlbaranesLineas</Almacen>
			<Indice>albliAlbaran</Indice>
			<Indice>albliId</Indice>
			<Orden>albliOrden</Orden>
			<Campos>
				<Campo id="refArticulo" tipo="e">albliArtRef</Campo>
				<Campo id="nombre" tipo="t">$[articulo>nombre]->albliArtNombre</Campo>
				<Campo id="precio" tipo="z">albliArtPrecio</Campo>
				<Campo id="cantidad" tipo="z">albliCantidad</Campo>
				<Campo id="descuento" tipo="r">albliDto</Campo>
				<Campo id="precio" tipo="r">$[articulo>precioTarifa]->albliArtPrecio</Campo>
				<Campo id="pvp" tipo="r">$(1-[descuento]/100.) * [precio]</Campo>
				<Campo id="total" tipo="r">$[cantidad]*[pvp]</Campo>
			</Campos>
		</Campo>
	</Campos>
</mtAlbaran>

</xmlConfig>
