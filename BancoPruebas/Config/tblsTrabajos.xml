<?xml version="1.0"?>
<xmlConfig>
<!-- Tipos de datos:
t: Texto
z: Número Entero
r: Número Real
e: externo
l: líneas			
 -->

<mtTrabajo>
	<Almacen>Trabajos</Almacen>
	<Indice><id1>traId</id1></Indice>
	<Campos>
		<nombre tipo="t">traNombre</nombre>
		<cliente tipo="e">
			<Almacen>Cliente</Almacen>
			<Indice><id1>traCliente</id1></Indice>		
		</cliente>		
		<cliNombre tipo="t">$[cliente>nombre]</cliNombre>
		<contacto tipo="t">traContacto</contacto>
		<articulo tipo="e">
			<Almacen>Articulo</Almacen>
			<Indice><id1>traArticulo</id1></Indice>		
		</articulo>
		<artRef tipo="t" busqueda="articulo->ref">$[articulo>ref]</artRef>
		<artNombre tipo="t">$[articulo>nombre]</artNombre>
		<procesos tipo="l">
			<Almacen>TrabajosProcesos</Almacen>
			<Indice>
				<id1>traprTrabajo</id1>
				<id2>traprId</id2>
			</Indice>
			<Orden>traprOrden</Orden>
			<Campos>
				<posicion tipo="e">
					<Almacen>Posicion</Almacen>
					<Indice><id1>traprPosicion</id1></Indice>
				</posicion>
				<nomPosicion tipo="t" busqueda="posicion->nombre">$[posicion>nombre]</nomPosicion>
				<proceso tipo="e">
					<Almacen>Proceso</Almacen>
					<Indice><id1>traprProceso</id1></Indice>
				</proceso>
				<refProceso tipo="t" busqueda="proceso->ref">$[proceso>ref]</refProceso>
				<nomProceso tipo="t">$[proceso>nombre]</nomProceso>
				<observaciones tipo="t">traprObs</observaciones>
			</Campos>
		</procesos>
		<observaciones tipo="t">traObs</observaciones>
	</Campos>
</mtTrabajo>

<mtProceso>
	<Almacen>Procesos</Almacen>
	<Indice><id1>proId</id1></Indice>
	<Campos>
		<ref tipo="t">proRef</ref>
		<nombre tipo="t">proNombre</nombre>
		<tareas tipo="l">
			<Almacen>ProcesosTareas</Almacen>
			<Indice>
				<id1>protaProceso</id1>
				<id2>protaId</id2>
			</Indice>
			<Orden>protaOrden</Orden>
			<Campos>
				<tarea tipo="e">
					<Almacen>Tarea</Almacen>					
					<Indice><id1>protaTarea</id1></Indice>
				</tarea>
				<refTarea tipo="t" busqueda="tarea->ref">$[tarea>ref]</refTarea>
				<nomTarea tipo="t">$[tarea>nombre]</nomTarea>
				<unica tipo="b">protaUnica</unica>	
				<observaciones tipo="t">protaObs</observaciones>
			</Campos>
		</tareas>
		<observaciones tipo="t">proObs</observaciones>
	</Campos>
</mtProceso>

<mtTarea>
	<Almacen>Tareas</Almacen>
	<Indice><id1>tarId</id1></Indice>
	<Campos>
		<ref tipo="t">tarRef</ref>
		<nombre tipo="t">tarNombre</nombre>
		<descripcion tipo="t">tarDescripcion</descripcion>
	</Campos>
</mtTarea>

<mtPosicion>
	<Almacen>Posiciones</Almacen>
	<Indice><id1>posId</id1></Indice>
	<Campos>
		<nombre tipo="t">posNombre</nombre>
		<descripcion tipo="t">posDescripcion</descripcion>
	</Campos>
</mtPosicion>

</xmlConfig>